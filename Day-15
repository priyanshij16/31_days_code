// merge sort algo:

mergesort(a,l,r)
{
 if(l<r)
mid=l+r/2;
mergesort(a,l,mid+1);
mergesort(a,mid+1,r)
merge(a,l,mid,r)
}

Merge(){
n= mid-s+1;
m=e-mid;
 int l1[n];
 int l2[m];
 for(i=0;i<n;i++)
  l1[i]= a[s+i];
for(i=0;i<m;i++)
  l2[i]= a[mid+i+1];

 i=0,j=0,k=s;
 while(i<n&&j<m)
{
  if(l1[i] <l2[j] )
   a[k] = l1[i++];
else
a[k] = l2[j++];

k++;
}
 while (i<n1)    
    {    
        a[k] = L1[i];    
        i++;    
        k++;    
    }    


}
